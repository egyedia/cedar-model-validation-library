{
    "description": "Schema that describes the schema of a '_ui' field of a static-valued template field",
    "type": "object",
    "properties": {
        "title": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "inputType": {
            "type": "string",
            "enum": [ "section-break", "richtext", "image", "youtube" ]
        },
        "_content": { "type": [ "string", "null" ] },
        "hidden": { "type": "boolean" }
    },
    "required": [ "description", "title", "inputType", "_content" ],
    "additionalProperties": false
}
